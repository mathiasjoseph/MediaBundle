<?xml version="1.0" encoding="UTF-8"?>
<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <parameters>
        <parameter key="adevis.media.provider.image.class">Miky\Bundle\MediaBundle\Provider\ImageProvider</parameter>
        <parameter key="adevis.media.provider.file.class">Miky\Bundle\MediaBundle\Provider\FileProvider</parameter>
        <parameter key="adevis.media.provider.youtube.class">Miky\Bundle\MediaBundle\Provider\YouTubeProvider</parameter>
        <parameter key="adevis.media.provider.dailymotion.class">Miky\Bundle\MediaBundle\Provider\DailyMotionProvider</parameter>
        <parameter key="adevis.media.provider.vimeo.class">Miky\Bundle\MediaBundle\Provider\VimeoProvider</parameter>
        <parameter key="adevis.media.thumbnail.format">Miky\Bundle\MediaBundle\Thumbnail\FormatThumbnail</parameter>
        <parameter key="adevis.media.thumbnail.format.default">jpg</parameter>
        <parameter key="adevis.media.thumbnail.liip_imagine">Miky\Bundle\MediaBundle\Thumbnail\LiipImagineThumbnail</parameter>
        <parameter key="adevis.media.pool.class">Miky\Bundle\MediaBundle\Provider\Pool</parameter>
    </parameters>
    <services>
        <service id="adevis.media.pool" class="%adevis.media.pool.class%">
            <argument/>
        </service>
        <service id="adevis.media.thumbnail.format" class="%adevis.media.thumbnail.format%">
            <argument type="string">%adevis.media.thumbnail.format.default%</argument>
        </service>
        <service id="adevis.media.thumbnail.liip_imagine" class="%adevis.media.thumbnail.liip_imagine%">
            <argument type="service" id="router"/>
        </service>
        <service id="adevis.media.provider.image" class="%adevis.media.provider.image.class%">
            <tag name="adevis.media.provider"/>
            <argument>adevis.media.provider.image</argument>
            <argument/>
            <argument/>
            <argument/>
            <argument type="service" id="adevis.media.thumbnail.format"/>
            <argument/>
            <argument/>
            <argument/>
            <argument type="service" id="adevis.media.metadata.proxy"/>
            <call method="setTemplates">
                <argument type="collection">
                    <argument key="helper_thumbnail">MikyMediaBundle:Provider:thumbnail.html.twig</argument>
                    <argument key="helper_view">MikyMediaBundle:Provider:view_image.html.twig</argument>
                </argument>
            </call>
        </service>
        <service id="adevis.media.provider.file" class="%adevis.media.provider.file.class%">
            <tag name="adevis.media.provider"/>
            <argument>adevis.media.provider.file</argument>
            <argument/>
            <argument/>
            <argument/>
            <argument type="service" id="adevis.media.thumbnail.format"/>
            <argument/>
            <argument/>
            <argument type="service" id="adevis.media.metadata.proxy"/>
            <call method="setTemplates">
                <argument type="collection">
                    <argument key="helper_thumbnail">MikyMediaBundle:Provider:thumbnail.html.twig</argument>
                    <argument key="helper_view">MikyMediaBundle:Provider:view_file.html.twig</argument>
                </argument>
            </call>
        </service>
        <service id="adevis.media.provider.youtube" class="%adevis.media.provider.youtube.class%">
            <tag name="adevis.media.provider"/>
            <argument>adevis.media.provider.youtube</argument>
            <argument/>
            <argument/>
            <argument/>
            <argument type="service" id="adevis.media.thumbnail.format"/>
            <argument type="service" id="adevis.media.buzz.browser"/>
            <argument type="service" id="adevis.media.metadata.proxy"/>
            <argument/>
            <call method="setTemplates">
                <argument type="collection">
                    <argument key="helper_thumbnail">MikyMediaBundle:Provider:thumbnail.html.twig</argument>
                    <argument key="helper_view">MikyMediaBundle:Provider:view_youtube.html.twig</argument>
                </argument>
            </call>
        </service>
        <service id="adevis.media.provider.dailymotion" class="%adevis.media.provider.dailymotion.class%">
            <tag name="adevis.media.provider"/>
            <argument>adevis.media.provider.dailymotion</argument>
            <argument/>
            <argument/>
            <argument/>
            <argument type="service" id="adevis.media.thumbnail.format"/>
            <argument type="service" id="adevis.media.buzz.browser"/>
            <argument type="service" id="adevis.media.metadata.proxy"/>
            <call method="setTemplates">
                <argument type="collection">
                    <argument key="helper_thumbnail">MikyMediaBundle:Provider:thumbnail.html.twig</argument>
                    <argument key="helper_view">MikyMediaBundle:Provider:view_dailymotion.html.twig</argument>
                </argument>
            </call>
        </service>
        <service id="adevis.media.provider.vimeo" class="%adevis.media.provider.vimeo.class%">
            <tag name="adevis.media.provider"/>
            <argument>adevis.media.provider.vimeo</argument>
            <argument/>
            <argument/>
            <argument/>
            <argument type="service" id="adevis.media.thumbnail.format"/>
            <argument type="service" id="adevis.media.buzz.browser"/>
            <argument type="service" id="adevis.media.metadata.proxy"/>
            <call method="setTemplates">
                <argument type="collection">
                    <argument key="helper_thumbnail">MikyMediaBundle:Provider:thumbnail.html.twig</argument>
                    <argument key="helper_view">MikyMediaBundle:Provider:view_vimeo.html.twig</argument>
                </argument>
            </call>
        </service>
        <service id="adevis.media.buzz.connector.file_get_contents" class="Buzz\Client\FileGetContents"/>
        <service id="adevis.media.buzz.connector.curl" class="Buzz\Client\Curl"/>
        <service id="adevis.media.buzz.browser" class="Buzz\Browser">
            <argument/>
        </service>
    </services>
</container>
